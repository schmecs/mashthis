<h1>Listing songs</h1>

<p> Total Songs: <%= @count %> </p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Albumtitle</th>
      <th>Prodyear</th>
      <th>Bpm</th>
      <th>Key</th>
      <th>Relative</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.albumtitle %></td>
        <td><%= song.prodyear %></td>
        <td><%= song.bpm %></td>
        <td><%= song.scale %></td>
        <td><%= song.scale_rel %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

